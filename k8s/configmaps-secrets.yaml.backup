apiVersion: v1
kind: ConfigMap
metadata:
  name: backend-config
data:
  ALLOWED_ORIGINS: "http://localhost:3000,http://localhost:3001,http://localhost:8080,https://localhost:3000,https://localhost:3001,https://localhost:8080"
  ENVIRONMENT: "production"
---
apiVersion: v1
kind: ConfigMap
metadata:
  name: frontend-config
data:
  api-url: "http://backend-service:80/api"
---
apiVersion: v1
kind: Secret
metadata:
  name: database-secret
type: Opaque
data:
  database-url: <base64-encoded-database-url>
---
apiVersion: v1
kind: Secret
metadata:
  name: api-keys-secret
type: Opaque
data:
  openai-api-key: <base64-encoded-openai-api-key>
---
apiVersion: v1
kind: Secret
metadata:
  name: auth-secret
type: Opaque
data:
  jwt-secret-key: <base64-encoded-jwt-secret>